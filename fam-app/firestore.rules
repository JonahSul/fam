rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Allow authenticated users to read all messages
      allow read: if isAuthenticated();
      
      // Only allow creating messages through Cloud Functions
      // This ensures proper validation and AI response generation
      allow write: if false;
    }
    
    // User profiles (if you add them later)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Only allow creating through Cloud Functions (for proper initialization)
      allow create: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
